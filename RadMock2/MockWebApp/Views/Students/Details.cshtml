@model MockLibrary.Models.Students

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h4>Student Details</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.StudentID</td>
                    <td>@Model.FirstName</td>
                    <td>@Model.LastName</td>
                    <td>@Model.DateOfBirth.ToShortDateString()</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<br />
    @await Html.PartialAsync("_StudentGrades", Model.Grades)
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
