@model MockLibrary.Models.Bookings

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bookings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingID" />
            <div class="form-group">
                <label asp-for="TicketType" class="control-label"></label>
                <select asp-for="TicketType" class="form-control"></select>
                <span asp-validation-for="TicketType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketCost" class="control-label"></label>
                <input asp-for="TicketCost" class="form-control" />
                <span asp-validation-for="TicketCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaggageCharge" class="control-label"></label>
                <input asp-for="BaggageCharge" class="form-control" />
                <span asp-validation-for="BaggageCharge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightID" class="control-label"></label>
                <select asp-for="FlightID" class="form-control" asp-items="ViewBag.FlightID"></select>
                <span asp-validation-for="FlightID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerID" class="control-label"></label>
                <select asp-for="PassengerID" class="form-control" asp-items="ViewBag.PassengerID"></select>
                <span asp-validation-for="PassengerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
