@model MockLibrary.Models.Bookings

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bookings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>New Booking</h4>
        <form asp-action="Create">
            <div class="form-group">
                <label>Passenger</label>
                <select asp-for="PassengerID" class="form-control" asp-items="ViewBag.Passengers"></select>
            </div>
            <div class="form-group">
                <label>Flight</label>
                <select asp-for="FlightID" class="form-control" asp-items="ViewBag.Flights"></select>
            </div>
            <div class="form-group">
                <label>Ticket Type</label>
                <select asp-for="TicketType" class="form-control" asp-items="Html.GetEnumSelectList<MockLibrary.Models.TicketType>()"></select>
            </div>
            <div class="form-group">
                <label>Ticket Cost</label>
                <input asp-for="TicketCost" class="form-control" />
            </div>
            <div class="form-group">
                <label>Baggage Charge</label>
                <input asp-for="BaggageCharge" class="form-control" />
            </div>
            <input type="hidden" asp-for="BookingID" />
            <button type="submit" class="btn btn-primary">Create Booking</button>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
